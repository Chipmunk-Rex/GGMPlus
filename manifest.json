{
  "manifest_version": 3,
  "name": "GGMPlus",
  "version": "1.0.0",
  "description": "GGM 출석체크, 게임조각 파밍, 확률 계산기 등 다양한 기능을 제공하는 확장 프로그램",

  "permissions": [
    "alarms",
    "storage",
    "cookies",
    "notifications",
    "tabs"
  ],

  "host_permissions": [
    "https://ggm.gondr.net/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "GGMPlus"
  },

  "content_scripts": [
    {
      "matches": ["https://ggm.gondr.net/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
